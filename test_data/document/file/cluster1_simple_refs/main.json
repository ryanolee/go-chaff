{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "main.json",
  "title": "Main Schema",
  "description": "A simple schema that references person and address schemas",
  "type": "object",
  "properties": {
    "user": {
      "$ref": "person.json"
    },
    "shippingAddress": {
      "$ref": "address.json"
    },
    "billingAddress": {
      "$ref": "address.json"
    }
  },
  "required": ["user", "shippingAddress"]
}
