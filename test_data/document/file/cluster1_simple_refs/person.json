{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "person.json",
  "title": "Person Schema",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 150
    },
    "homeAddress": {
      "$ref": "file://./address.json"
    }
  },
  "required": ["firstName", "lastName", "email"]
}
