{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "link.json",
  "title": "Node Link",
  "description": "A link between nodes - creates cyclic reference back to node",
  "type": "object",
  "properties": {
    "linkType": {
      "type": "string",
      "enum": ["parent", "sibling", "reference", "dependency"]
    },
    "targetNode": {
      "$ref": "node.json"
    },
    "weight": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "metadata": {
      "$ref": "metadata.json"
    }
  },
  "required": ["linkType", "targetNode"]
}
