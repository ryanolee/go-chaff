{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "metadata.json",
  "title": "Metadata",
  "description": "Metadata that can be attached to nodes and links",
  "type": "object",
  "properties": {
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "createdBy": {
      "$ref": "user.json"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
