{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "node.json",
  "title": "Tree Node",
  "description": "A tree node that can have children (self-referencing) and a parent reference",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "metadata": {
      "$ref": "metadata.json"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "node.json"
      }
    },
    "linkedNodes": {
      "type": "array",
      "items": {
        "$ref": "link.json"
      }
    }
  },
  "required": ["id", "name"]
}
