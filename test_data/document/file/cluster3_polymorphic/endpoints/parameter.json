{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "endpoints/parameter.json",
  "title": "API Parameter",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "in": {
      "type": "string",
      "enum": ["path", "query", "header", "cookie"]
    },
    "required": {
      "type": "boolean"
    },
    "schema": {
      "$ref": "../schemas/schema_definition.json"
    },
    "description": {
      "type": "string"
    },
    "deprecated": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name", "in", "schema"]
}
