{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "endpoints/response.json",
  "title": "API Response",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "$ref": "parameter.json"
      }
    },
    "content": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../schemas/media_type.json"
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../schemas/link.json"
      }
    }
  },
  "required": ["description"]
}
