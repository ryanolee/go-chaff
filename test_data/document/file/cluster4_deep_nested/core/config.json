{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "core/config.json",
  "title": "Application Config",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "baseTypes": {
      "$ref": "types/base.json"
    },
    "defaultUser": {
      "$ref": "../entities/user.json"
    }
  },
  "required": ["appName", "version"]
}
