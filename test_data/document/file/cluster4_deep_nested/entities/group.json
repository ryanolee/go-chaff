{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entities/group.json",
  "title": "User Group",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../core/types/identifier.json"
    },
    "name": {
      "type": "string"
    },
    "members": {
      "type": "array",
      "items": {
        "$ref": "user.json"
      }
    },
    "parentGroup": {
      "$ref": "group.json"
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "permission.json"
      }
    }
  },
  "required": ["id", "name"]
}
