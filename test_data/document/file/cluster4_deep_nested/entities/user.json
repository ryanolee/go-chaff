{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entities/user.json",
  "title": "User Entity",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../core/types/identifier.json"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "profile": {
      "$ref": "profile/profile.json"
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "permission.json"
      }
    },
    "groups": {
      "type": "array",
      "items": {
        "$ref": "group.json"
      }
    }
  },
  "required": ["id", "name", "email"]
}
