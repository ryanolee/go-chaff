{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "events/handler.json",
  "title": "Event Handler",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../core/types/identifier.json"
    },
    "eventTypes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "module": {
      "$ref": "../modules/module.json"
    },
    "subscribedUsers": {
      "type": "array",
      "items": {
        "$ref": "../entities/user.json"
      }
    },
    "metadata": {
      "$ref": "../shared/metadata.json"
    }
  },
  "required": ["id", "eventTypes"]
}
