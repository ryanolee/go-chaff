{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "modules/plugins/hook.json",
  "title": "Plugin Hook",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "priority": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "eventType": {
      "$ref": "../../events/event.json"
    },
    "targetPlugin": {
      "$ref": "plugin.json"
    }
  },
  "required": ["name"]
}
