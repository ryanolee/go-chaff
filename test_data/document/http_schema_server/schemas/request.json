{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://127.0.0.1:8080/request.json",
  "title": "HTTP Request",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "headers": {
      "$ref": "./common/headers.json"
    },
    "body": {
      "$ref": "./body.json"
    },
    "auth": {
      "$ref": "./auth/auth.json"
    }
  },
  "required": ["method", "url"]
}
